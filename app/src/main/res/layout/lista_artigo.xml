<layout>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView_artigo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/cardview_light_background" android:clickable="true">



        <fr.arnaudguyon.smartfontslib.FontTextView
            android:text="Artigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/artigo_numero"
            android:textSize="20sp"
            style="@style/DetalheFontStyle"/>

        <fr.arnaudguyon.smartfontslib.FontTextView
            android:text="Titulo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:id="@+id/titulo_artigo"
             android:textSize="20sp"
            style="@style/DetalheFontStyle"
            android:textColor="@color/md_black_1000_75"/>


    </LinearLayout>
</android.support.v7.widget.CardView>

</layout>